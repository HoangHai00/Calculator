<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtMainContent"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:text="0"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtMainResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:text=""
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMainContent" />


    <!-- Bàn phím số -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:columnCount="4"
        android:rowCount="15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Các nút số -->
        <Button
            android:id="@+id/btnMainClean"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/shape_cri_white_grey_stroke"
            android:text="C"
            android:textColor="@color/purpleApp"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnMainPercent"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/shape_cri_white_grey_stroke"
            android:text="%"
            android:textColor="@color/purpleApp"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/imbtnMainDelete"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@drawable/shape_cri_white_grey_stroke"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_delete_1" />

        <Button
            android:id="@+id/btnMainAdd"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/shape_cri_white_grey_stroke"
            android:text="+"
            android:textColor="@color/purpleApp"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnMain7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/shape_cri_white_grey_stroke"
            android:text="7"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnMain8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/shape_cri_white_grey_stroke"
            android:text="8"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnMain9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/shape_cri_white_grey_stroke"
            android:text="9"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnMainSub"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/shape_cri_white_grey_stroke"
            android:text="-"
            android:textColor="@color/purpleApp"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnMain4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/shape_cri_white_grey_stroke"
            android:text="4"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnMain5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/shape_cri_white_grey_stroke"
            android:text="5"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnMain6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/shape_cri_white_grey_stroke"
            android:text="6"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/imbtnMainMul"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/shape_cri_white_grey_stroke"
            android:padding="40dp"
            app:srcCompat="@drawable/ic_multiplication" />

        <Button
            android:id="@+id/btnMain1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/shape_cri_white_grey_stroke"
            android:text="1"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnMain2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/shape_cri_white_grey_stroke"
            android:text="2"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnMain3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/shape_cri_white_grey_stroke"
            android:text="3"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/imbtnMainDiv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/shape_cri_white_grey_stroke"
            android:padding="40dp"
            app:srcCompat="@drawable/ic_divide" />

        <ImageButton
            android:id="@+id/imbtnMainInverted"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/shape_cri_white_grey_stroke"
            app:srcCompat="@drawable/ic_convert" />

        <Button
            android:id="@+id/btnMain0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/shape_cri_white_grey_stroke"
            android:text="0"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnMainDecimal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/shape_cri_white_grey_stroke"
            android:text="."
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnMainResult"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/shape_cri_grey_white_stroke"
            android:text="="
            android:textColor="@color/white"
            android:textSize="30sp" />
    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>